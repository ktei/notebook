extends ../layout

block content
	form.login(role='form', method='POST', action='/login')
		h2.heading Please sign in
		input.form-control(type='text', name='username', placeholder='User name', required='true', autofocus='true')
		input.form-control(type='password', name='password', placeholder='Password', required='true')
		button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in